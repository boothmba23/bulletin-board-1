<h1>All Boards</h1>

<%= form_with model: @board, url: boards_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :name, "Name" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit "Add board" %>
  </div>
<% end %>

<ul>
  <% @boards.each do |board| %>
    <li><%= link_to board.name, board_path(board) %></li>
  <% end %>
</ul>
